{
  "name": "whisperdesk-enhanced",
  "version": "2.1.0",
  "description": "Advanced cross-platform transcription application with AI-powered speech recognition",
  "main": "src/main/main.js",
  "homepage": "https://whisperdesk.com",
  "author": {
    "name": "WhisperDesk Team",
    "email": "support@whisperdesk.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "nodemon --watch src/main --exec electron .",
    "dev:renderer": "cd src/renderer/whisperdesk-ui && pnpm run dev",
    
    "prebuild": "npm run build:whisper",
    "build": "npm run build:renderer && npm run build:main",
    "build:skip-whisper": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer/whisperdesk-ui && pnpm run build",
    "build:main": "echo 'Main process build complete'",
    "build:whisper": "node scripts/build-whisper-cross-platform.js",
    "build:whisper:bash": "chmod +x scripts/build-whisper.sh && ./scripts/build-whisper.sh",
    "build:whisper:ps1": "powershell -ExecutionPolicy Bypass -File scripts/build-whisper.ps1",
    "build:whisper:force": "rm -rf binaries && npm run build:whisper",
    
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux",
    
    "postinstall": "electron-builder install-app-deps",
    
    "test": "jest",
    "test:native": "node test-native-services.js",
    "test:transcription": "node test-transcription.js",
    "test:binary": "node -e \"const BinaryManager = require('./src/main/services/binary-manager'); (async () => { const bm = new BinaryManager(); await bm.initialize(); const status = await bm.getStatus(); console.log(JSON.stringify(status, null, 2)); })()\"",
    
    "server": "node transcription-server.js",
    "web": "concurrently \"npm run server\" \"cd src/renderer/whisperdesk-ui && pnpm run dev\"",
    
    "lint": "eslint src/",
    "clean": "rimraf dist build node_modules/.cache temp",
    "clean:all": "npm run clean && rimraf binaries models",
    "clean:binary": "rimraf binaries",
    
    "setup": "./setup.sh",
    "setup:check": "node scripts/setup-check.js",
    "setup:macos": "chmod +x scripts/build-whisper.sh && ./scripts/build-whisper.sh && npm run download:model:tiny",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    
    "download:model:tiny": "mkdir -p models && curl -L -o models/ggml-tiny.bin https://huggingface.co/ggerganov/whisper.cpp/resolve/main/ggml-tiny.bin",
    
    "release:prepare": "npm run clean && npm run build && npm run dist:all",
    "release:github": "gh release create v$npm_package_version dist/* --generate-notes",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "// Configuration": "// Enhanced configuration for binary management",
  "whisperdesk": {
    "binaryManagement": {
      "autoFix": true,
      "preferStatic": true,
      "fallbackStrategies": ["download", "build", "bundle"],
      "platforms": {
        "darwin": {
          "staticLinking": true,
          "architectures": ["x64", "arm64"],
          "dependencyCheck": "otool"
        },
        "win32": {
          "staticLinking": false,
          "architectures": ["x64"],
          "bundleRuntime": true
        },
        "linux": {
          "staticLinking": true,
          "architectures": ["x64"],
          "dependencyCheck": "ldd"
        }
      }
    },
    "models": {
      "defaultModel": "tiny",
      "downloadOnSetup": true,
      "supportedModels": ["tiny", "base", "small", "medium", "large-v2", "large-v3"]
    }
  },
  "build": {
    "appId": "com.whisperdesk.enhanced",
    "productName": "WhisperDesk Enhanced",
    "copyright": "Copyright Â© 2024 WhisperDesk Team",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/whisperdesk-ui/dist/**/*",
      "src/shared/**/*",
      "node_modules/**/*",
      "package.json",
      "!src/renderer/whisperdesk-ui/src/**/*",
      "!src/renderer/whisperdesk-ui/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      },
      {
        "from": "binaries/",
        "to": "binaries/",
        "filter": ["**/*"]
      },
      {
        "from": "models/",
        "to": "models/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/whisper-cli",
          "to": "MacOS/",
          "filter": ["**/*"]
        }
      ]
    },
    "win": {
      "icon": "resources/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/",
          "to": "binaries/",
          "filter": ["**/*"]
        }
      ]
    },
    "linux": {
      "icon": "resources/icons/",
      "category": "AudioVideo",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/whisper-cli",
          "to": "./",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/icons/icon.ico",
      "uninstallerIcon": "resources/icons/icon.ico"
    },
    "dmg": {
      "title": "WhisperDesk Enhanced ${version}",
      "icon": "resources/icons/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "whisperdesk",
      "repo": "whisperdesk-enhanced"
    }
  },
  "keywords": [
    "transcription",
    "speech-to-text", 
    "whisper",
    "ai",
    "audio",
    "voice",
    "electron",
    "cross-platform",
    "native",
    "real-time"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whisperdesk/whisperdesk-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/whisperdesk/whisperdesk-enhanced/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}