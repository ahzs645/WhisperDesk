{
  "name": "whisperdesk-enhanced",
  "version": "2.1.0",
  "description": "Advanced cross-platform transcription application with AI-powered speech recognition",
  "main": "src/main/main.js",
  "homepage": "https://whisperdesk.com",
  "author": {
    "name": "WhisperDesk Team",
    "email": "support@whisperdesk.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "// Core App Scripts": "// Basic electron app management",
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "npm run check:whisper && npm start",
    
    "// Build Management": "// Complete build orchestration",
    "build": "echo 'Build complete'",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac", 
    "dist:linux": "electron-builder --linux",
    
    "// Dependencies": "// Install and manage dependencies",
    "build:deps": "npm install && npm run build:renderer:deps",
    "build:renderer:deps": "if [ -d 'src/renderer/whisperdesk-ui' ]; then cd src/renderer/whisperdesk-ui && (pnpm install || npm install); fi",
    "postinstall": "npm run setup:check",
    
    "// Enhanced Whisper Binary Management": "// Advanced binary building with auto-fixing",
    "build:whisper": "node scripts/build-whisper.js --static",
    "build:whisper:win": "node scripts/build-whisper.js --platform=win32 --static",
    "build:whisper:mac": "node scripts/build-whisper.js --platform=darwin --static", 
    "build:whisper:linux": "node scripts/build-whisper.js --platform=linux --static",
    "build:whisper:dynamic": "node scripts/build-whisper.js",
    
    "// Binary Fix and Verification": "// Handle dependency issues and verification",
    "fix:whisper": "node scripts/fix-whisper-dependencies.js",
    "fix:whisper:macos": "chmod +x scripts/fix-whisper-macos.sh && ./scripts/fix-whisper-macos.sh",
    "fix:whisper:force": "rm -rf binaries/whisper-cli* && npm run fix:whisper",
    "check:whisper": "node scripts/test-binary.js",
    "check:whisper:deps": "node scripts/check-dependencies.js",
    "verify:whisper": "npm run check:whisper && npm run check:whisper:deps",
    
    "// Model Management": "// Download and manage AI models",
    "build:models": "node scripts/download-models.js",
    "build:models:tiny": "node scripts/download-models.js --model=tiny",
    "build:models:base": "node scripts/download-models.js --model=base",
    "build:models:small": "node scripts/download-models.js --model=small",
    
    "// Renderer Building": "// Frontend build management", 
    "build:renderer": "if [ -d 'src/renderer/whisperdesk-ui' ]; then cd src/renderer/whisperdesk-ui && (pnpm run build || npm run build); fi",
    
    "// Complete Build Workflows": "// Full platform builds with binary management",
    "build:full": "npm run build:deps && npm run setup:binaries && npm run build:models:tiny && npm run build:renderer && npm run dist",
    "build:full:win": "npm run build:deps && npm run build:whisper:win && npm run build:models:tiny && npm run build:renderer && npm run dist:win",
    "build:full:mac": "npm run build:deps && npm run build:whisper:mac && npm run build:models:tiny && npm run build:renderer && npm run dist:mac", 
    "build:full:linux": "npm run build:deps && npm run build:whisper:linux && npm run build:models:tiny && npm run build:renderer && npm run dist:linux",
    
    "// Setup and Initialization": "// Project setup with auto-fixing",
    "setup:binaries": "npm run build:whisper || npm run fix:whisper",
    "setup:check": "node scripts/setup-check.js",
    "setup:full": "npm run build:deps && npm run setup:binaries && npm run build:models:tiny",
    
    "// Development and Testing": "// Development workflow support",
    "dev:setup": "npm run setup:full && npm run build:renderer",
    "dev:clean": "npm run clean:build && npm run dev:setup",
    "test:binary": "npm run verify:whisper",
    "test:full": "npm run verify:whisper && npm run build:renderer && npm start",
    
    "// Cleanup": "// Clean build artifacts",
    "clean": "rimraf dist binaries models node_modules src/renderer/whisperdesk-ui/node_modules src/renderer/whisperdesk-ui/dist",
    "clean:build": "rimraf dist binaries models",
    "clean:deps": "rimraf node_modules src/renderer/whisperdesk-ui/node_modules",
    "clean:all": "npm run clean && npm install",
    
    "// CI/CD Workflows": "// GitHub Actions compatible workflows",
    "workflow:local": "npm run build:full",
    "workflow:windows": "npm run build:full:win", 
    "workflow:macos": "npm run build:full:mac",
    "workflow:linux": "npm run build:full:linux",
    
    "// Debug and Diagnostics": "// Troubleshooting support",
    "debug:binary": "node scripts/debug-binary.js",
    "debug:deps": "node scripts/debug-dependencies.js",
    "debug:full": "npm run debug:binary && npm run debug:deps",
    "diagnose": "npm run debug:full && npm run check:whisper"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "// Configuration": "// Enhanced configuration for binary management",
  "whisperdesk": {
    "binaryManagement": {
      "autoFix": true,
      "preferStatic": true,
      "fallbackStrategies": ["download", "build", "bundle"],
      "platforms": {
        "darwin": {
          "staticLinking": true,
          "architectures": ["x64", "arm64"],
          "dependencyCheck": "otool"
        },
        "win32": {
          "staticLinking": false,
          "architectures": ["x64"],
          "bundleRuntime": true
        },
        "linux": {
          "staticLinking": true,
          "architectures": ["x64"],
          "dependencyCheck": "ldd"
        }
      }
    },
    "models": {
      "defaultModel": "tiny",
      "downloadOnSetup": true,
      "supportedModels": ["tiny", "base", "small", "medium", "large-v2", "large-v3"]
    }
  },
  "build": {
    "appId": "com.whisperdesk.enhanced",
    "productName": "WhisperDesk Enhanced",
    "copyright": "Copyright Â© 2024 WhisperDesk Team",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/whisperdesk-ui/dist/**/*",
      "src/shared/**/*",
      "node_modules/**/*",
      "package.json",
      "!src/renderer/whisperdesk-ui/src/**/*",
      "!src/renderer/whisperdesk-ui/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      },
      {
        "from": "binaries/",
        "to": "binaries/",
        "filter": ["**/*"]
      },
      {
        "from": "models/",
        "to": "models/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/whisper-cli",
          "to": "MacOS/",
          "filter": ["**/*"]
        }
      ]
    },
    "win": {
      "icon": "resources/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/",
          "to": "binaries/",
          "filter": ["**/*"]
        }
      ]
    },
    "linux": {
      "icon": "resources/icons/",
      "category": "AudioVideo",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/whisper-cli",
          "to": "./",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/icons/icon.ico",
      "uninstallerIcon": "resources/icons/icon.ico"
    },
    "dmg": {
      "title": "WhisperDesk Enhanced ${version}",
      "icon": "resources/icons/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "whisperdesk",
      "repo": "whisperdesk-enhanced"
    }
  },
  "keywords": [
    "transcription",
    "speech-to-text", 
    "whisper",
    "ai",
    "audio",
    "voice",
    "electron",
    "cross-platform",
    "native",
    "real-time"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whisperdesk/whisperdesk-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/whisperdesk/whisperdesk-enhanced/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}