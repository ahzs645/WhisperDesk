{
  "build": {
    "appId": "com.whisperdesk.enhanced",
    "productName": "WhisperDesk Enhanced",
    "copyright": "Copyright Â© 2024 WhisperDesk Team",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/whisperdesk-ui/dist/**/*",
      "src/shared/**/*",
      "node_modules/**/*",
      "package.json",
      "!src/renderer/whisperdesk-ui/src/**/*",
      "!src/renderer/whisperdesk-ui/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      },
      {
        "from": "binaries/",
        "to": "binaries/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/whisper-cli",
          "to": "MacOS/whisper-cli"
        }
      ]
    },
    "win": {
      "icon": "resources/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "publisherName": "WhisperDesk Team",
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/whisper-cli.exe",
          "to": "binaries/whisper-cli.exe"
        },
        {
          "from": "binaries/*.dll",
          "to": "binaries/",
          "filter": ["*.dll"]
        },
        {
          "from": "binaries/vc_redist.x64.exe",
          "to": "binaries/vc_redist.x64.exe"
        }
      ]
    },
    "linux": {
      "icon": "resources/icons/",
      "category": "AudioVideo",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "binaries/whisper-cli",
          "to": "whisper-cli"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhisperDesk Enhanced",
      "include": "resources/installer.nsh",
      "installerIcon": "resources/icons/icon.ico",
      "uninstallerIcon": "resources/icons/icon.ico"
    },
    "dmg": {
      "title": "WhisperDesk Enhanced ${version}",
      "icon": "resources/icons/icon.icns",
      "background": "resources/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "whisperdesk",
      "repo": "whisperdesk-enhanced"
    }
  }
}